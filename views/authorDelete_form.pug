extends layout 

block content 

    h1 #{title}:  #{`${author.first_name} ${author.family_name}`}
    p #{author.date_of_birth === undefined ? '' : `DOB: ${author.date_of_birth_formatted}`}  #{author.date_of_death === undefined ? '' : `- DOD: ${author.date_of_death_formatted}`}

    if books.length
        p #[strong Delete the below mentioned books before deleting the author]

    div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl 
    each book in books 
        dt 
            a(href=book.url) #{book.title}
        dd #{book.summary}
    
    else 
        p.text-danger #[Do you want to delete this author?]

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=author._id )

      button.btn.btn-primary(type='submit') Delete