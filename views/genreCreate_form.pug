extends layout 

block content 

    h1 #{title}

    form(method='POST' action='')
        label(for='name') Genre:
        br
        input#name.form-control(type='text' name='name' placeholder='Fantasy' required='true' value=(undefined===genre ? '': genre.name))
        br
        button.btn.btn-primary(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!= error.msg
