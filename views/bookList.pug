extends layout

block content
    h1= title 
    p This is the list of books we got in store for you 

    ul  
      each book in book_list 
        li
            a(href="book.url") #{book.title}
            |   (#{`${book.author.first_name} ${book.author.family_name}`})    
      else 
        li There are no books available!
