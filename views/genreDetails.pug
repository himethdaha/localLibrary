extends layout 

block content 
    h1=title 

    h2 #{genre.name}

    div(style='margin-left:20px;margin-top:20px')

    h5 Books

    d1 
        each book in genre_books
            dt 
                a(href=book.url) #{book.title}
            dd #{book.summary}
        else 
            p This genre has no books

    hr 
    p 
        a(href=genre.url+'/delete') Delete genre